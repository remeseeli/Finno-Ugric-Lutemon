<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CED4DD"
    tools:context=".activities.MainActivity">

    <Spinner
        android:id="@+id/lutemonTypeSpinner"
        android:layout_width="200dp"
        android:layout_height="46dp"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="549dp" />

    <EditText
        android:id="@+id/testInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name your Lutemon"
        android:inputType="text"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="595dp" />

    <Button
        android:id="@+id/createLutemonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF706B"
        android:text="Create Lutemon"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="501dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:onClick="trainTest"
        android:backgroundTint="#FF6B6B"
        android:text="Training"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/recyclerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#FF6B6B"
        android:text="Lutemons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button" />

    <Button
        android:id="@+id/battleMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#FF6B6B"
        android:text="Battle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundTint="#353535"
        android:text="Welcome to Lutemon game"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="715dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First, create your Lutemons or load them from file"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="639dp" />

    <Button
        android:id="@+id/loadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FD6B6B"
        android:text="Load Lutemons"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="547dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF6B6B"
        android:text="Save Lutemons"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="543dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can save your Lutemons here:"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="706dp" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="468dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <!-- Added suppress warning for HardcodedText -->
    <!-- This is how you do comments on XML by the way -->
    <!--PLS WORK NOW -->
</androidx.constraintlayout.widget.ConstraintLayout>